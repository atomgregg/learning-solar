{
    "version": "0.2.0",
    "configurations": [
    {
        "name": ".NET Core Launch (web)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/bin/Debug/net7.0/ATG.Collector.API.dll",
        "args": [],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
    },
        {
            "name": "Collector Host: .NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ATG.Collector.Host/bin/Debug/net7.0/ATG.Collector.Host.dll",
            "args": ["--collect-mode", "GenData", "--store-mode", "Postgresql", "--store-connection", "Host=localhost;Port=5432;Database=atg;Username=postgres;Password=password"],
            "cwd": "${workspaceFolder}/ATG.Collector.Host",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Utils: Docker .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/ATG.Utils/ATG.Utils.csproj"
            }
        }
    ]
}